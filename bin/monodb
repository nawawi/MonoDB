#!/usr/bin/env php
<?php
if ( 'cli' === php_sapi_name() && ! empty( $_SERVER['SCRIPT_NAME'] ) ) {
    $dir = realpath(dirname($_SERVER['SCRIPT_NAME']));
    $config = $dir.'/../autoload.php';
    if ( !file_exists($config) ) {
        echo "autoload file not found\n";
        exit(1);
    }
    if ( false === getenv('MONODB_ENV') ) {
        putenv('MONODB_ENV='.$dir.'/.monodb.env');
    }
    require_once( $config );
    $app = new Monodb\Console();
    $app->run();
}
echo "Invalid console\n";
exit(1);
