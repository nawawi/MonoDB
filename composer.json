{
    "name": "nawawi/monodb",
    "description": "A flat-file key-value data structure store, used as a simple database, cache and message broker.",
    "keywords": [
        "database",
        "database-storage",
        "key-value database",
        "flat-file",
        "flat-file-db",
        "flat-file database",
        "flatfile database",
        "flat-file-storage",
        "monodb",
        "serverless",
        "document",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://monodb.io",
    "authors": [
        {
            "name": "Nawawi Jamili",
            "email": "nawawi@rutweb.com",
            "homepage": "https://rutweb.com"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-json": "*",
        "symfony/var-exporter": "^5.0",
        "symfony/console": "^5.0",
        "symfony/polyfill-ctype": "^1.0",
        "light/composer-ignore-plugin": "~1.0"
    },
    "suggest": {
        "ext-zend-opcache": "Recommended for better performance",
        "ext-ctype": "For best performance"
    },
    "bin": [
        "bin/monodb"
    ],
    "autoload": {
        "psr-4": {
            "Monodb\\": "src/"
        },
        "classmap": ["src/"]
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "light-ignore-plugin": {
            "nawawi/monodb": [
                "tests",
                "vendor",
                ".git",
                ".github",
                ".gitattributes",
                ".gitignore",
                ".phpcs.xml",
                "autoload.php",
                "phpunit.xml",
                "README.md"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true
    }
}
