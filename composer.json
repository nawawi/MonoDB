{
    "name": "nawawi/monodb",
    "description": "A flat-file key-value data structure store, used as a simple database, cache and message broker.",
    "keywords": [
        "database",
        "database-storage",
        "key-value database",
        "flat-file",
        "flat-file-db",
        "flat-file database",
        "flatfile database",
        "flat-file-storage",
        "monodb",
        "serverless",
        "document",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://monodb.io",
    "authors": [
        {
            "name": "Nawawi Jamili",
            "email": "nawawi@rutweb.com",
            "homepage": "https://rutweb.com"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-json": "*",
        "symfony/var-exporter": "^5.0",
        "symfony/console": "^5.0",
        "symfony/polyfill-ctype": "^1.0"
    },
    "suggest": {
        "ext-zend-opcache": "Recommended for better performance",
        "ext-ctype": "For best performance"
    },
    "bin": [
        "bin/monodb"
    ],
    "autoload": {
        "psr-4": {
            "Monodb\\": "src/"
        },
        "classmap": ["src/"]
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "cleanup-non-composer": [
            "rm -rf vendor/nawawi/monodb/vendor/",
            "rm -f vendor/nawawi/monodb/autoload.php"
        ],
        "post-install-cmd": [
            "@cleanup-non-composer"
        ],
        "post-update-cmd": [
            "@cleanup-non-composer"
        ]
    }
}
